extends layouts/layout.pug

block includes
  include ../components/modal/modal.pug
  include ../components/form/form.pug
  include ../components/input-text/input-text.pug
  include ../components/btn/btn.pug

block vars
  - var title = 'Логин';

block content
  .page-login
    +modal('Вход')
      +form(method='post' action='test.php')
        +input-text({
          id: 'login',
          type: 'text',
          placeholder: 'Логин',
          err: true
        })(class='form-control')
        +input-text({
          id: 'password',
          type: 'password',
          placeholder: 'Пароль',
          err: true
        })(class='form-control')
        .form__bottom
          +btn('Авторизироваться')(href='/' class='form-control form__btn')
